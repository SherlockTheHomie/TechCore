<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

<div class="text-center">
  {{#if article.comments.length}}
<h3>Comments:</h3>
{{#each article.comments as |comment|}}
{{> comment}}
{{/each}}
{{/if}}
</div>
<div class="text-center">
  <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-form">Say Somethin</label>
        <input class="form-input" type="text" id="comment-form" name="project-title" />
      </div>
      <div class="form-group">
        <button class type="submit" class="btn btn-primary" id="comment">send it</button>
      </div>
    </form>
  </br>
</div>