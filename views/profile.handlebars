<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>What's on your mind?</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-title">Title:</label>
        <input class="form-input" type="text" id="project-title" name="project-title" />
      </div>
      <div class="form-group">
        <label for="project-desc">description:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">send it</button>
      </div>
    </form>
  </div>

  {{#if articles.length}}
  <div class="col-md-6 project-list">
    <h3>Your Articles:</h3>

    {{#each articles as |article|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/article/{{article.id}}">{{article.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" id="deletebtn" data-id="{{article.id}}">DELETE</button>
      </div>
      <form class="form new-article-form">
      <div class="form-group">
        <label for="project-title">Title:</label>
        <input class="form-input" type="text" id="edit-project-title" name="project-title" value="{{article.title}}" />
      </div>
      <div class="form-group">
        <label for="project-desc">description:</label>
        <textarea class="form-input" id="edit-project-desc" name="project-desc">{{article.description}}</textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" id="updatebutton" data-id="{{article.id}}">UPDATE</button>
      </div>
    </form>   
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/profile.js"></script>



